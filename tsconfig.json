{
    "compilerOptions": {
        "target": "es2019",
        "module": "es2015",
        "moduleResolution": "node",
        "jsx": "react-native",
        "outDir": "__build__",
        "rootDir": "src",
        "types": ["react", "react-native", "jest"],
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["android", "ios", "compiled", "__tests__/**/*.test.ts"]
}
